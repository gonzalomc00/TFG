</head>

<body>
    <main class="col-lg-8 mx-auto p-3 py-md-5">
        <div class="p-5 mb-4 bg-light rounded-3">
            <h1 style="color: black;">Select questions for Classroom Challenge</h1>
            <div class="container-fluid py-5" style="overflow-x:auto;">
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search..."
                    title="Type in a name">
                <table id="myTable" class="table table-bordered">
                    <tr class="header">
                        <th scope="col" style="width:5%;">Include</th>
                        <th scope="col" style="width:65%;">Question</th>
                        <th scope="col" style="width:10%;">Response</th>
                        <th scope="col" style="width:15%;">Category</th>
                        <th scope="col" style="width:5%;">Image</th>
                    </tr>
                        {{#each preguntas}}
                        <tr>
                            <td><label class="switch"><input type="checkbox" id={{@index}}><span class="slider"></span></label></td>
                            <td>{{this.enunciado}}</td>
                            <td>{{this.solucion}}</td>
                            <td>{{this.categoria}}</td>
                            {{#if this.image}}
                            <td id={{this.image}}>✔️</td>
                            {{else}}
                            <td>❌</td>
                            {{/if}}
                        </tr>
                        {{/each}}
                </table>
                <button type="button" onclick="start();" style="float: right;">Open the room</button>
                <button type="button" onclick="back();" style="float: left;">Go Back</button>
            </div>
        </div>
        <br>
    </main>

